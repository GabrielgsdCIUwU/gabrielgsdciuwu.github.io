<section id="<%= id %>" class="w-full bg-gray-100 p-8 mt-0 text-center rounded-lg shadow-lg">
    <h2 class="text-3xl font-extrabold text-gray-800 mb-4"><%= content.title %></h2>
    <p class="text-lg text-gray-600 mb-8"><%= content.description %></p>
    <div class="grid grid-cols-1 sm:grid-cols-1 md:grid-cols-3 gap-8">
        <% content.projects.forEach(project => { %>
        <a href="<%= project.link %>" class="group relative block bg-white p-6 rounded-lg shadow-lg hover:shadow-2xl hover:scale-105 transition-all duration-300 border-t-4 border-blue-500 overflow-hidden">
            <div class="absolute inset-0 bg-gradient-to-br from-blue-50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>

            <div class="relative z-10">
                <div class="flex justify-between items-start mb-4">
                    <div class="w-full h-48 bg-gray-200 rounded-lg flex items-center justify-center overflow-hidden">
                        <img src="<%= project.image %>" alt="<%= project.alt %>" class="object-cover w-full h-full group-hover:scale-110 transition-transform duration-300">
                    </div>
                </div>

                <h3 class="text-2xl font-bold mt-6 text-gray-700 group-hover:text-blue-600 transition-colors duration-300"><%= project.title %></h3>
                <p class="text-gray-500 mt-2"><%= project.description %></p>
                <p class="text-gray-500 mt-2"><%= project.date %></p>

                <div class="flex justify-center mt-6 space-x-4">
                <% project.skills.forEach(skillName => { 
                    const skill = knowledge.knowledge.find(k => k.name === skillName);
                    if (skill) { %>
                    <img src="<%= skill.icon %>" alt="<%= skill.name %>" class="w-6 h-6" title="<%= skill.name %>">
                <% } }) %>
                </div>

                <div class="flex items-center justify-center text-blue-600 font-semibold mt-4 group-hover:gap-2 transition-all duration-300">
                    <span><%=content.seeProject %></span>
                    <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                </div>
            </div>
        </a>
        <% }) %>
    </div>
</section>
