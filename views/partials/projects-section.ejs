<section id="<%= id %>" class="w-full bg-gray-100 p-8 mt-0 text-center rounded-lg shadow-lg">
    <h2 class="text-3xl font-extrabold text-gray-800 mb-4"><%= content.title %></h2>
    <p class="text-lg text-gray-600 mb-8"><%= content.description %></p>
    <div class="grid grid-cols-1 sm:grid-cols-1 md:grid-cols-3 gap-8">
        <% content.projects.forEach(project => { %>
        <a href="<%= project.link %>" class="block bg-white p-6 rounded-lg shadow hover:shadow-xl hover:bg-blue-50 transition-shadow duration-300">
            <div class="w-full h-48 bg-gray-200 rounded-lg flex items-center justify-center overflow-hidden">
                <img src="<%= project.image %>" alt="<%= project.alt %>" class="object-cover w-full h-full">
            </div>
            <h3 class="text-2xl font-bold mt-6 text-gray-700"><%= project.title %></h3>
            <p class="text-gray-500 mt-2"><%= project.description %></p>
            <p class="text-gray-500 mt-2"><%= project.date %></p>
            <div class="flex justify-center mt-6 space-x-4">
            <% project.skills.forEach(skillName => { 
                const skill = knowledge.knowledge.find(k => k.name === skillName);
                if (skill) { %>
                <img src="<%= skill.icon %>" alt="<%= skill.name %>" class="w-6 h-6" title="<%= skill.name %>">
            <% } }) %>
            </div>
        </a>
        <% }) %>
    </div>
</section>
