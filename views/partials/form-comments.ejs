<div id="<%= id %>" class="fixed inset-0 bg-gray-800 bg-opacity-50 flex items-center justify-center z-50 hidden">
    <div class="bg-white p-8 rounded-md shadow-lg">
        <input id="<%= idCommentName %>" type="text" placeholder="<%= content.namePlaceHolder %>" class="p-2 mb-4 border border-gray-300 rounded-md w-full" required>
        <textarea id="<%= idCommentText %>" placeholder="<%= content.textPlaceHolder %>" class="p-2 mb-4 border border-gray-300 rounded-md w-full" rows="4" required></textarea>

        <button id="<%= idCommentSubmit %>" class="p-2 bg-green-500 text-white rounded-md hover:bg-green-600 focus:outline-none w-full">
            <%= content.buttonSend %>
        </button>

        <button id="<%= idCommentCancel %>" class="p-2 bg-red-500 text-white rounded-md hover:bg-red-600 focus:outline-none mt-4 w-full">
            <%= content.buttonCancel %>
        </button>
    </div>
</div>