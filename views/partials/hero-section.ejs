<section
    id="hero-section"
    class="relative min-h-screen flex items-center justify-center overflow-hidden bg-gradient-to-br from-slate-950 via-blue-950 to-slate-900">
    <div class="absolute inset-0 overflow-hidden">
        <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-blue-500/10 rounded-full blur-3xl animate-pulse"></div>
        <div
            class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-purple-500/10 rounded-full blur-3xl animate-pulse delay-1000">
        </div>
    </div>

    <div class="relative z-10 container mx-auto px-4 py-20">
        <div class="max-w-4xl mx-auto text-center">

            <div class="mb-8 flex justify-center">
                <div class="relative">
                    <div
                        class="absolute inset-0 rounded-full bg-gradient-to-r from-blue-500 to-purple-500 opacity-20 blur-xl animate-pulse">
                    </div>

                    <div
                        class="relative w-32 h-32 md:w-40 md:h-40 rounded-full overflow-hidden border-4 border-blue-500/50 shadow-2xl">
                        <%- include('./profile-picture.ejs') %>
                    </div>

                    <%- include('./work-status.ejs', {
                        content: content.status
                    }) %>
                </div>
            </div>

            <h1
                class="text-5xl md:text-7xl font-bold mb-4 bg-gradient-to-r from-blue-400 via-purple-400 to-blue-400 bg-clip-text text-transparent animate-pulse">
                Gabrielgsd
            </h1>

            <p class="text-xl md:text-2xl text-blue-300 font-semibold mb-4">
                <%= content.role %>
            </p>

            <p class="text-base md:text-lg text-slate-300 max-w-2xl mx-auto mb-8 leading-relaxed">
                <%= content.description %>
            </p>

            <%- include('./skill-chips.ejs', { skills: skills }) %>

            <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
                <a href="#contact"
                    class="px-8 py-3 bg-gradient-to-r from-blue-500 to-purple-500 text-white font-semibold rounded-lg shadow-lg hover:shadow-xl hover:scale-105 transition duration-300">
                    <%= content.cv %>
                </a>
                <a href="#projects-section"
                    class="px-8 py-3 bg-gradient-to-r from-blue-700 to-purple-900 text-white font-semibold rounded-lg shadow-lg hover:shadow-xl hover:scale-105 transition duration-300">
                    <%= content.projects %>
                </a>
            </div>
        </div>
    </div>
</section>