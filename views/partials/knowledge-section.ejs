<section id="<%= id %>" class="w-full bg-gray-100 p-8 text-center rounded-lg shadow-lg">
    <h2 class="text-3xl font-extrabold text-gray-800 mb-4">
        <%= content.title %>
    </h2>
    <p class="text-lg text-gray-600 mb-8">
        <%= content.description %>
    </p>

    <% const categories = [...new Set(content.knowledge.map(item => item.category))]; %>

    <div class="flex flex-wrap justify-center mt-8">
        <button data-category="all" class="filter-button bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 mx-2 my-2 rounded">
        <%= content.filters.all %>
        </button>

        <% categories.forEach(category => { %>
            <button data-category="<%= category %>" class="filter-button bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 mx-2 my-2 rounded">
                <%= category %>
            </button>
        <% }) %>
    </div>

    <div id="knowledge-grid" class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8 mt-8">
        <% content.knowledge.forEach(item => { %>
            <div  data-category="<%= item.category %>" class="knowledge-card bg-white p-6 rounded-lg shadow hover:shadow-xl transition-shadow duration-300">
                <img src="<%= item.icon %>" alt="<%= item.name %>" class="mx-auto w-16 h-16 mb-4">

                <h3 class="text-2xl font-bold text-gray-700 mb-2"><%= item.name %></h3>
                <p class="text-gray-500"><%= item.description %></p>
            </div>
        <% }) %>
    </div>
</section>