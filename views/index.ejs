<!DOCTYPE html>
<html lang="<%= content.headDetails.lang %>">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="<%= content.headDetails.description %>" />
    <meta property="og:title" content="<%= content.headDetails.ogTitle %>" />
    <meta
      property="og:description"
      content="<%= content.headDetails.ogDescription %>" />
    <meta property="og:image" content="/resources/img/Gabri-Watching-Icon.jpg" />
    <meta property="og:url" content="https://gabrielgsd.developer.li" />
    <meta property="og:type" content="website" />
    <title>Gabrielgsd</title>
    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link rel="icon" href="/resources/img/Gabri-Watching-Icon.jpg" type="image/png" />
    <link rel="stylesheet" href="/resources/css/output-index.css" />
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
  </head>

  <body class="bg-gray-200 flex flex-col min-h-screen">

    <%- include('./partials/header.ejs') %>

    <div class="flex-1 flex flex-col overflow-y-auto">
      
      <%- include('partials/sidebar.ejs', {
        content: content.sidebar,
        menuItems: [
          {
            "href": "#hero-section",
            "name": content.hero.section
          },
          {
            "href": "#about-me",
            "name": content.about.title
          },
          {
            "href": "#knowledge-section",
            name: content.knowledge.title
          }, 
          {
            "href": "#projects-section",
            "name": content.projects.title
          },
          {
            "href": "#testimonials-section",
            "name": content.comments.title
          },
          {
            "href": "#contact-section",
            name: content.contact.title
          }
        ]
      }) %>

      <main id="main-content" class="flex-1 flex flex-col relative transition-all duration-300 ml-0">
        
        <%- include('./partials/hero-section.ejs', {
          content: content.hero,
          skills: content.knowledge.knowledge
        }) %>  

        <%- include('./partials/section-separator.ejs') %>

        <%- include('./partials/section.ejs', {
          id: 'about-me',
          content: content.about}) %>

        <%- include('./partials/section-separator.ejs') %>

        <%- include('./partials/knowledge-section.ejs', {
          id: 'knowledge-section',
          content: content.knowledge
        }) %>

        <%- include('./partials/section-separator.ejs') %>
        
        <%- include('./partials/projects-section.ejs', {
          id: 'projects-section',
          content: content.projects,
          knowledge: content.knowledge
        }) %>

        <%- include('./partials/section-separator.ejs') %>
        
        <%- include('./partials/testimonials-section.ejs', {
          id: 'testimonials-section',
          content: content.comments
        }) %>

        <%- include('./partials/form-comments.ejs', {
          id: 'comment-form',
          idCommentName: 'comment-name',
          idCommentText: 'comment-text',
          idCommentSubmit: 'submit-comment',
          idCommentCancel: 'cancel-comment',
          content: content.comments.formComments
        }) %>

        <%- include('./partials/section-separator.ejs') %>

        <%- include('./partials/section.ejs', {
          id: 'contact-section',
          content: content.contact
        }) %>

        <%- include('./partials/form-cv.ejs') %>

        <%- include('./partials/footer.ejs') %>

        <script src="../resources/js/main.js"></script>
        
        <%- include('./partials/toastr-messages.ejs', {
          alerts: content.comments.alerts,
          cvAlerts: content.cvModal
        }) %>
        <script src="../resources/js/comentarios.js"></script>
        <script src="../resources/js/cv-request.js"></script>
      </main>
    </div>
  </body>
</html>
